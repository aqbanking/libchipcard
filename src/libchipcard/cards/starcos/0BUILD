<?xml?>

<gwbuild>

  <target type="ConvenienceLibrary" name="cards_starcos" >

    <includes type="c" >
      $(gwenhywfar_cflags)
      -I$(topsrcdir)/src
      -I$(topbuilddir)/src
      -I$(topsrcdir)
      -I$(topbuilddir)
    </includes>

    <includes type="tm2" >
      --include=$(gwenhywfar_dir)/share/gwenhywfar/typemaker2/c
      --include=$(builddir)
    </includes>

  
    <define name="BUILDING_CHIPCARD" />
    
    <setVar name="local/cflags">$(visibility_cflags)</setVar>

    <setVar name="tm2flags" >
      --api=CHIPCARD_API
    </setVar>

  
    <setVar name="local/typefiles" >
      starcos_keydescr.xml
    </setVar>
  
    <setVar name="local/built_sources" >
      starcos_keydescr.c
    </setVar>
  
    <setVar name="local/built_headers_pub">
      starcos_keydescr.h
    </setVar>
  
  
    <setVar name="local/built_headers_priv" >
      starcos_keydescr_p.h
    </setVar>
  
  
    <headers dist="true" install="$(includedir)/libchipcard6/libchipcard/cards/starcos" >
      $(local/built_headers_pub)

      starcos.h
    </headers>


    <headers dist="true" >
      $(local/built_headers_priv)

      starcos_p.h
    </headers>
  
  
    <sources>
      $(local/typefiles)

      starcos.c
    </sources>


    <data dist="true" install="$(datadir)/chipcard/apps">
      starcos-app-hvb.xml
      starcos-app-vr.xml
      starcos-app.xml
    </data>

    <data dist="true" install="$(datadir)/chipcard/cards">
      starcos-card.xml
    </data>

  </target>
  
</gwbuild>

