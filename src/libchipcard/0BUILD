    </includes>

    <define name="BUILDING_CHIPCARD" />
    
    <setVar name="local/cflags">$(visibility_cflags)</setVar>

    <sources>
      dummy.c
    </sources>


    <data dist="true" install="$(datadir)/chipcard/cards">
      card.xml
    </data>

    <useTargets>
      base
      cards
      lcct
    </useTargets>


    <libraries>
      $(gwenhywfar_libs)
      $(pcsc_libs)
      $(zlib_libs)
    </libraries>


    <subdirs>
      base
      cards
      ct
    </subdirs>


  </target>

</gwbuild>
