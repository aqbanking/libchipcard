<?xml?>

<gwbuild>

  <target type="InstallLibrary" name="chipcard"
          so_current="$(project_so_current)" 
          so_age="$(project_so_age)"
          so_revision="$(project_so_revision)"
          install="$(libdir)" >

    <includes type="c" >
      $(gwenhywfar_cflags)
      -I$(topsrcdir)/src
      -I$(topbuilddir)/src
      -I$(topsrcdir)
      -I$(topbuilddir)
    </includes>

    <includes type="tm2" >
      --include=$(gwenhywfar_dir)/share/gwenhywfar/typemaker2/c
      --include=$(builddir)
    </includes>

  
    <define name="BUILDING_CHIPCARD" />
    
    <setVar name="local/cflags">$(visibility_cflags)</setVar>

    <setVar name="tm2flags" >
      --api=CHIPCARD_API
    </setVar>

  
    <setVar name="local/typefiles" >
    </setVar>
  
    <setVar name="local/built_sources" >
    </setVar>
  
    <setVar name="local/built_headers_pub">
    </setVar>
  
  
    <setVar name="local/built_headers_priv" >
    </setVar>
  
  
    <headers dist="true" install="$(includedir)/libchipcard6/libchipcard" >
      $(local/built_headers_pub)
    </headers>


    <headers dist="true" >
      $(local/built_headers_priv)
    </headers>
  
  
    <sources>
      $(local/typefiles)
      dummy.c
    </sources>


    <data dist="true" install="$(datadir)/chipcard/cards">
      card.xml
    </data>

    <extradist>
    </extradist>


    <useTargets>
      base
      cards
      lcct
    </useTargets>


    <libraries>
      $(gwenhywfar_libs)
      $(pcsc_libs)
      $(zlib_libs)
    </libraries>


    <subdirs>
      base
      cards
      ct
    </subdirs>


  </target>

</gwbuild>
