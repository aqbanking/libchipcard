
<driver name="ccid_serial_ifd" type="ifd">
  <short>Generic Driver for CCID Devices</short>
  <manufacturer>
    <name>Ludovic Rousseau</name>
    <url>http://pcsclite.alioth.debian.org/ccid.html</url>
  </manufacturer>

  <lib>
    <names>
      <name>libccidtwin.so.1.*</name>
      <name>libccidtwin.so</name>
      <name>libccidtwin.so.*</name>
    </names>
    
    <locations>
      <loc>/usr/local/lib/chipcard/server/lowlevel/ifd/serial</loc>
      <loc>/usr/lib/chipcard/server/lowlevel/ifd/serial</loc>
      <loc>/lib</loc>
      <loc>/usr/lib</loc>
      <loc>/usr/local/lib</loc>
      <loc>/usr/lib/pcsc/drivers/serial</loc>
      <loc>/usr/local/lib/pcsc/drivers/serial</loc>
      <loc>/usr/pcsc/drivers/serial</loc>
      <loc>/usr/local/pcsc/drivers/serial</loc>

      <loc>/usr/local/lib64/chipcard2-server/lowlevel/ifd/serial</loc>
      <loc>/usr/lib64/chipcard3/server/lowlevel/ifd/serial</loc>
      <loc>/lib64</loc>
      <loc>/usr/lib64</loc>
      <loc>/usr/local/lib64</loc>
      <loc>/usr/lib64/pcsc/drivers/serial</loc>
      <loc>/usr/local/lib64/pcsc/drivers/serial</loc>

      <loc>/usr/lib/readers/usb/serial/</loc>
      <loc>/usr/lib/readers/serial/</loc>
      <loc>/usr/lib64/readers/usb/serial/</loc>
      <loc>/usr/lib64/readers/serial/</loc>
    </locations>
    
    <downloads>
      <url>http://alioth.debian.org/project/showfiles.php?group_id=1225&release_id=303</url>
      <filename></filename>
    </downloads>
  </lib>

  <readers>
  
    <reader name="ccid_gempc_twin" busType="Tty"
            addressType="devicePath"
            devicePathTmpl="$(path)"
            vendor="0x08e6" product="0x3437" >
      <short>GemPC Twin</short>
      
    </reader>

    <reader name="ccid_gempc_card" busType="Tty"
            addressType="devicePath"
            devicePathTmpl="$(path)"
            vendor="0x0157" product="0x100" >
      <short>GemPC Card</short>
    </reader>

  </readers>


</driver>

