<!-- contains all readers again since cyberjack driver 2.0.6 -->

<driver name="cyberjack_ctapi" type="ctapi">
  <short>Driver for the Reiner-SCT Cyberjack</short>
  <manufacturer>
    <name>Reiner SCT</name>
    <url>http://www.reiner-sct.de/</url>
  </manufacturer>

  <lib>
    <names>
      <name>libctapi-cyberjack.so</name>
    </names>
    
    <locations>
      <loc>/lib</loc>
      <loc>/usr/lib</loc>
      <loc>/usr/local/lib</loc>
    </locations>

    <downloads>
      <url>http://support.reiner-sct.de/downloads/LINUX/V2.0.6/</url>
      <filename>ctapi-cyberjack-2.0.6.tar.gz</filename>
    </downloads>
  </lib>

  <vars>
    <var name="autoPortOffset">1</var>
    <var name="autoPortMode">vendorId</var>
  </vars>

  <readers>

    <reader name="cyberjack" com="USBSerial" vendor="0x0c4b" product="0x0100">
      <short>Cyberjack pinpad or ecom</short>
      <ports>
        <port value="0x8001">USB0</port>
        <port value="0x8002">USB1</port>
        <port value="0x8003">USB2</port>
        <port value="0x8004">USB3</port>
      </ports>
      <flags>
        <flag>keypad</flag>
      </flags>
      <image>cyberjack_pinpad.jpg</image>
    </reader>

    <reader name="cyberjack2" com="USB" vendor="0x0c4b" product="0x0300">
      <short>Cyberjack pinpad</short>
      <flags>
        <flag>keypad</flag>
      </flags>
      <image>cyberjack_pinpad.jpg</image>
    </reader>


  </readers>


  <!-- MacOS specific part -->

  <lib osname="macos">
    <names>
      <name>CyberJack_CTAPI</name>
    </names>

    <locations>
      <loc>/Library/Frameworks/CyberJack_CTAPI.framework/Versions/Current</loc>
      <loc>/lib</loc>
      <loc>/usr/lib</loc>
      <loc>/usr/local/lib</loc>
    </locations>
    
    <downloads>
      <url>http://support.reiner-sct.de/downloads/LINUX/V2.0.6/</url>
      <filename>ctapi-cyberjack-2.0.6.tar.gz</filename>
    </downloads>
  </lib>

  <vars osname="macos" >
    <var name="autoPortOffset">1</var>
    <var name="autoPortMode">vendorId</var>
  </vars>

  <readers osname="macos" >

    <reader name="cyberjack" com="USB" vendor="0x0c4b" product="0x0100">
      <short>Cyberjack pinpad or ecom</short>
      <ports>
        <port value="0x8001">USB0</port>
        <port value="0x8002">USB1</port>
        <port value="0x8003">USB2</port>
        <port value="0x8004">USB3</port>
      </ports>
      <flags>
        <flag>keypad</flag>
      </flags>
      <image>cyberjack_pinpad.jpg</image>
    </reader>

    <reader name="cyberjack2" com="USB" vendor="0x0c4b" product="0x0300">
      <short>Cyberjack pinpad</short>
      <flags>
        <flag>keypad</flag>
      </flags>
      <image>cyberjack_pinpad.jpg</image>
    </reader>


  </readers>

</driver>

