
<!--
  This describes the original driver of the manufacturer SCM for SPR 532. 
  It only works with the original version 4.15 of the firmware.
-->

<driver name="scmx32_ifd" type="ifd">
  <short>Driver for Towitoko/SCM USB Readers</short>
  <manufacturer>
    <name>SCM Microsystems</name>
    <url>http://www.scmmicro.com/</url>
  </manufacturer>

  <lib>
    <names>
      <name>spr332ccidDriver</name>
    </names>
    
    <locations>
      <loc>/lib</loc>
      <loc>/usr/lib</loc>
      <loc>/usr/local/lib</loc>
      <loc>/usr/lib/pcsc/drivers/spr332ccidDriver.bundle/Contents/Linux</loc>
      <loc>/usr/local/lib/pcsc/drivers/spr332ccidDriver.bundle/Contents/Linux</loc>
      <loc>/lib64</loc>
      <loc>/usr/lib64</loc>
      <loc>/usr/local/lib64</loc>
      <loc>/usr/lib64/pcsc/drivers/spr332ccidDriver.bundle/Contents/Linux</loc>
      <loc>/usr/local/lib64/pcsc/drivers/spr332ccidDriver.bundle/Contents/Linux</loc>
    </locations>
    
    <downloads>
      <url>http://www.libchipcard.de/files/</url>
      <filename>SPR332ccidDriverv1_16.tar.gz</filename>
    </downloads>
  </lib>

  <readers>
  
    <reader name="scm" busType="UsbRaw" 
            vendor="0x04e6" product="0xe003" >
      <short>SCM Chipdrive Pinpad X32</short>
      <flags>
        <flag>keypad</flag>
        <flag>keepRunning</flag>
      </flags>

      <autoport>
        <mode>pos</mode>
        <busorder>UsbRaw</busorder>
        <sortkey>vendorId</sortKey>
        <offset>0</offset>
      </autoport>

      <image>scm_pinpadX32.jpg</image>
    </reader>
    
  </readers>


</driver>

