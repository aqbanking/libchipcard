
<driver name="cherry_ctapi" type="ctapi">
  <short>Driver for the Cherry 1501 Keyboard Reader</short>
  <manufacturer>
    <name>Martin Preuss</name>
    <url>http://www.libchipcard.de/</url>
  </manufacturer>

  <lib>
    <names>
      <name>libctapi-cherry.so</name>
      <name>libctapi-cherry.so.0</name>
    </names>
    
    <locations>
      <loc>/lib</loc>
      <loc>/usr/lib</loc>
      <loc>/usr/local/lib</loc>
    </locations>
    
    <downloads>
      <url>http://www.libchipcard.de/drivers/</url>
      <filename>ctapi-cherry-0.9.0.tar.gz</filename>
    </downloads>
  </lib>

  <vars>
  </vars>

  <readers>
    <reader name="cherry_1501" com="serial" >
      <short>Cherry Keyboard 1501</short>

      <autoport>
        <mode>fixed</mode>
      </autoport>
      <ports>
        <port value="1">serial</port>
        <port value="1">serial-fixed</port>
      </ports>

      <flags>
      </flags>
      <image>cherry-1501.jpg</image>
    </reader>

  </readers>


</driver>

