prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@

result=""

for d in $*; do
    case $d in
	--vmajor)
	    result="$result @CHIPCARD_VERSION_MAJOR@"
	    ;;
	--vminor)
	    result="$result @CHIPCARD_VERSION_MINOR@"
	    ;;
	--vpatchlevel)
	    result="$result @CHIPCARD_VERSION_PATCHLEVEL@"
	    ;;
	--vbuild)
	    result="$result @CHIPCARD_VERSION_BUILD@"
	    ;;
	--vtag)
	    result="$result @CHIPCARD_VERSION_TAG@"
	    ;;
        --vstring)
	    result="$result @CHIPCARD_VERSION_MAJOR@.@CHIPCARD_VERSION_MINOR@.@CHIPCARD_VERSION_PATCHLEVEL@"
            ;;
	--datadir)
	    result="$result @libchipcard2s_config@"
	    ;;
	--driverdir)
	    result="$result @LC_DEVICEDRIVER_PATH@"
	    ;;
	*)
	    echo "Usage:"
	    echo "$0 --vmajor gives the major version of Chipcard2 Server"
	    echo "$0 --vminor gives the minor version of Chipcard2 Server"
	    echo "$0 --vpatchlevel gives the patchlevel of Chipcard2 Server"
	    echo "$0 --vbuild gives the build number of Chipcard2 Server"
	    echo "$0 --vtag gives the tag of Chipcard2 Server (cvs, beta or stable)"
	    echo "$0 --vstring returns a version string"
	    echo "$0 --datadir returns the data folder"
	    echo "$0 --driverdir returns the folder which contains drivers"
	    exit 1
	    ;;
    esac
done
echo $result
